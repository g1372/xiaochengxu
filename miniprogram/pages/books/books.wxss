/* miniprogram/pages/user/user.wxss */
.weui-input {
  width: 90%;
  height: 100rpx;
  margin: 0% auto;
  padding-left: 5%;
  background-color: #ebebf0;
  border-radius: 20rpx;
}

.u-wrp-bnr {
  width: 95%;
  height: 370rpx;
  margin: 0% auto;
  display: block;
  position: relative;
  top: 40rpx;
  background: #f0f0f0;
  overflow: hidden;
  border-radius: 15rpx;
}

.u-img-slide {
  width: 100%;
  height: 100%;
}

.container {
  overflow: hidden;
}

.classify {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}

.classify_view {
  width: 300rpx;
  height: 200rpx;
  text-align: center;
  color: rgb(136, 136, 136);
}

.classify_view image {
  width: 140rpx;
  height: 140rpx;
  background-color: #000;
}

/* 推荐 */
.recommend {
  width: 90%;
  margin: auto;
  margin-top: 20rpx;
}

.recommend_text {
  font-size: 50rpx;
  color: rgb(0, 0, 0);
}

.booklist_view {
  margin: auto;
  height: 250rpx;
  margin-top: 30rpx;
  position: relative;
}

.booklist_img {
  width: 170rpx;
  height: 100%;
  /* border: 1px solid #000; */
}
.booklist_img image{
  width: 100%;
  height: 100%;
}

.booklist_text {
  position: absolute;
  top: 15rpx;
  left: 190rpx;
}

.booklist_text>view {
  width: 470rpx;
  color: rgb(119, 119, 119);

}

.booklist_text view:nth-of-type(1) {
  font-size: 40rpx;
  margin-bottom: 20rpx;
  color: #000;
}

.booklist_text view:nth-of-type(2) {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.booklist_text view:nth-of-type(3) {
  font-size: 26rpx;
  margin-top: 20rpx;
}
.booklist_text view:nth-of-type(3) text{
  margin-left: 20rpx;
  color: red;
  font-size: 24rpx;
}